<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- HeaderBar自定义属性 -->
    <declare-styleable name="HeaderBar">
        <attr name="isShowBack" format="boolean"/>
        <attr name="titleText" format="string|reference"/>
        <attr name="rightText" format="string|reference"/>
    </declare-styleable>

    <!-- LabelText自定义属性 -->
    <declare-styleable name="LabelText">
        <attr name="labelText" format="string"/>
        <attr name="contentText" format="string"/>
    </declare-styleable>

    <!-- TagFlowLayout自定义属性 -->
    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"/>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>
</resources>
